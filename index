    <form id="quizForm">
      <div class="question">
        <label>1. Cili është kryeqyteti i Shqipërisë?</label><br>
        <input type="radio" name="q1" value="Tirana"> Tirana<br>
        <input type="radio" name="q1" value="Shkodra"> Shkodra<br>
        <input type="radio" name="q1" value="Vlora"> Vlora
      </div>
      <div class="question">
        <label>2. Sa është 5 + 7?</label><br>
        <input type="radio" name="q2" value="11"> 11<br>
        <input type="radio" name="q2" value="12"> 12<br>
        <input type="radio" name="q2" value="13"> 13
      </div>
      <button type="button" onclick="submitQuiz()">Dërgo</button>
    </form>
    <div class="result" id="result"></div>
  </div>

  <script>
    function submitQuiz() {
      let score = 0;
      const form = document.forms['quizForm'];
      if (form.q1.value === 'Tirana') score++;
      if (form.q2.value === '12') score++;

      document.getElementById('result').innerText = "Rezultati juaj: " + score + "/2";
    }
  </script>
